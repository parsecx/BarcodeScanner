<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeQrScanner.AuthPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry x:Name="mailInput" Keyboard="Email" Placeholder="Email" PlaceholderColor="LightGray" HorizontalOptions="Fill" VerticalOptions="Center"/>
            <Entry x:Name="passInput" Keyboard="Default" Placeholder="Password" IsPassword="True" PlaceholderColor="LightGray" HorizontalOptions="Fill" VerticalOptions="Center"/>
            <Button Text="Get token" Clicked="OnGetTokenButtonClicked" HorizontalOptions="Fill"  VerticalOptions="CenterAndExpand"></Button>
            <Button Text="Cancel" Clicked="CancelGettingTokenButtonClicked" HorizontalOptions="Fill" VerticalOptions="End"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>